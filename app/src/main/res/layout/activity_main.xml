<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/appTitle"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/page_1" />

    <ImageView
        android:id="@+id/footter"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sandwich_bg_1" />

    <TextView
        android:id="@+id/faceLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="페이스북 계정으로 로그인"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/home"
        android:drawableLeft="@drawable/face"
        android:paddingLeft="20dp"/>


    <TextView
        android:id="@+id/kakaoLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/faceLog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="카카오톡 계정으로로그인"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/twologin"
        android:drawableLeft="@drawable/kakao"
        android:paddingLeft="20dp"
        />
    <TextView
        android:id="@+id/recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kakaoLog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="  회원가입 건너뛰고 레시피 확인하기"
        android:textSize="15dp"

        android:textColor="@color/black_dark"
        android:gravity="center"
        android:drawableLeft="@drawable/arrows"
        />




</RelativeLayout>